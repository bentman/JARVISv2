# Production Environment Configuration for Local AI Assistant
# Copy this file to .env and configure for your production environment
# This file follows production-forward methodology with security-focused defaults

# CRITICAL SECURITY SETTINGS - MUST BE CONFIGURED
# Generate strong secrets using: openssl rand -base64 32 (for SECRET_KEY) and openssl rand -base64 16 (for PRIVACY_SALT)
SECRET_KEY=your-production-secret-key-here-32-chars-minimum
PRIVACY_SALT=your-production-privacy-salt-here

# Environment
ENV=production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DATABASE_URL=sqlite:///./data/local_ai.db

# Redis
REDIS_URL=redis://redis:6379/0

# Model Configuration
MODEL_PATH=/models

# Privacy Settings (Production Defaults)
PRIVACY_ENCRYPT_AT_REST=true
PRIVACY_DEFAULT_LEVEL=local_only
PRIVACY_REDACT_AGGRESSIVENESS=strict
PRIVACY_RETENTION_DAYS=7

# Budget Control (Production Defaults)
BUDGET_DAILY_LIMIT_USD=10.0
BUDGET_MONTHLY_LIMIT_USD=100.0
BUDGET_ENFORCE=true
COST_PER_TOKEN_USD=0.0

# External Services (Disabled by Default - Enable Only If Needed)
# WARNING: Enabling these features sends data to external services
# Review privacy implications before enabling in production

# Web Search (DISABLED by default)
SEARCH_ENABLED=false
SEARCH_PROVIDERS=bing,google,tavily
# SEARCH_API_KEY=your-tavily-api-key
# SEARCH_BING_API_KEY=your-bing-api-key
# SEARCH_GOOGLE_API_KEY=your-google-api-key
# SEARCH_GOOGLE_CX=your-google-cx-id

# Remote LLM (DISABLED by default)
REMOTE_LLM_ENABLED=false
REMOTE_LLM_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini
BUDGET_LLM_WEB_COST_PER_TOKEN_USD=0.001

# Hardware Detection
NPU_FORCE_ENABLE=false

# CORS Origins (Production Default: Restrict in production)
BACKEND_CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# Health Check Endpoints
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# Performance Settings
MAX_WORKERS=2
MAX_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Security Headers
SECURE_COOKIES=true
CORS_ALLOW_CREDENTIALS=true
