# Development Environment Configuration for Local AI Assistant
# Copy to .env and adjust values for development. Do not commit your .env.
# This file is optimized for development workflows with relaxed settings

# Optional: set a fixed Docker Compose project name (overrides folder-derived name)
# COMPOSE_PROJECT_NAME=jarvisv2

# Backend (Development Settings)
SECRET_KEY=dev_secret_key_change_for_prod  # Use a strong key in production
MODEL_PATH=./models
DATABASE_URL=sqlite:///./data/local_ai.db
REDIS_URL=redis://redis:6379/0

# Privacy (Development Defaults)
PRIVACY_SALT=dev_privacy_salt_change_for_prod
PRIVACY_ENCRYPT_AT_REST=false  # Set to true in production
PRIVACY_DEFAULT_LEVEL=balanced  # Use 'local_only' in production
PRIVACY_REDACT_AGGRESSIVENESS=standard # Use 'strict' in production
PRIVACY_RETENTION_DAYS=30  # Days to retain data in development

# Budget (Development Defaults)
BUDGET_DAILY_LIMIT_USD=0  # 0 means no limit in development
BUDGET_MONTHLY_LIMIT_USD=0  # 0 means no limit in development
BUDGET_ENFORCE=false  # Set to true in production
COST_PER_TOKEN_USD=0.0

# Unified Search (Development: Disabled by default for privacy)
SEARCH_ENABLED=false  # Set to true for development testing if needed
SEARCH_PROVIDERS=bing,google,tavily
# Tavily
SEARCH_API_KEY=
# Bing Web Search
SEARCH_BING_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
SEARCH_BING_API_KEY=
# Google Programmable Search Engine (CSE)
SEARCH_GOOGLE_API_KEY=
SEARCH_GOOGLE_CX=

# Remote LLM (Development: Disabled by default for privacy)
REMOTE_LLM_ENABLED=false  # Set to true for development testing if needed
REMOTE_LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
XAI_API_KEY=
XAI_MODEL=grok-2

# Hardware Detection
NPU_FORCE_ENABLE=false

# CORS Origins (Development: Allow local development origins)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:8000", "http://127.0.0.1:5173", "http://127.0.0.1:8000"]  # Local development origins
