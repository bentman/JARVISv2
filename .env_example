# Example environment configuration for Local AI Assistant
# Copy to .env and adjust values. Do not commit your .env.

# Optional: set a fixed Docker Compose project name (overrides folder-derived name)
# COMPOSE_PROJECT_NAME=jarvisv2

# Backend
SECRET_KEY=change_me_for_prod
MODEL_PATH=./models
DATABASE_URL=sqlite:///./data/local_ai.db
REDIS_URL=redis://redis:6379/0

# Privacy
PRIVACY_SALT=local_ai_salt
PRIVACY_DEFAULT_LEVEL=local_only
PRIVACY_REDACT_AGGRESSIVENESS=standard
PRIVACY_RETENTION_DAYS=30

# Budget
BUDGET_DAILY_LIMIT_USD=0
BUDGET_MONTHLY_LIMIT_USD=0
BUDGET_ENFORCE=false
COST_PER_TOKEN_USD=0

# Unified Search (opt-in)
SEARCH_ENABLED=false
SEARCH_PROVIDERS=bing,google,tavily
# Tavily
SEARCH_API_KEY=
# Bing Web Search
SEARCH_BING_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
SEARCH_BING_API_KEY=
# Google Programmable Search Engine (CSE)
SEARCH_GOOGLE_API_KEY=
SEARCH_GOOGLE_CX=

# Remote LLM synthesis (future; leave unset)
REMOTE_LLM_ENABLED=false
REMOTE_LLM_PROVIDER=
OPENAI_API_KEY=
OPENAI_MODEL=
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=
GEMINI_API_KEY=
GEMINI_MODEL=
XAI_API_KEY=
XAI_MODEL=
